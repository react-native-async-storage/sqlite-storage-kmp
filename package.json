{
  "name": "Async Storage Sqlite",
  "private": true,
  "version": "0.0.1",
  "description": "Multiplatform sqlite storage for React Native AsyncStorage",
  "repository": {
    "url": "https://github.com/react-native-async-storage/sqlite-storage.git",
    "owner": "react-native-async-storage",
    "name": "sqlite-storage"
  },
  "author": "Krzysztof Borowy <contact@kborowy.com>",
  "homepage": "https://github.com/react-native-async-storage/sqlite-storage",
  "license": "MIT",
  "main": "lib/commonjs/index.js",
  "module": "lib/module/index.js",
  "react-native": "src/index.ts",
  "types": "lib/typescript/index.d.ts",
  "files": [
    "src",
    "lib",
    "nativeLib",
    "AsyncStorageSqlite.podspec"
  ],

  "packageManager": "yarn@4.0.2",
  "scripts": {
    "build": "yarn build:js && yarn build:native",
    "build:js": "bob build",
    "build:native": "./gradlew sqlite-storage:bundleSqliteStorage",
    "test:lint": "eslint src/**/*.ts"
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ]
  },
  "devDependencies": {
    "@rnx-kit/eslint-plugin": "0.6.0",
    "@types/eslint": "^8",
    "eslint": "8.54.0",
    "prettier": "2.8.8",
    "react-native": "0.72.7",
    "react-native-builder-bob": "0.23.2",
    "typescript": "5.3.2"
  },
  "codegenConfig": {
    "name": "AsyncStorageSqliteSpec",
    "type": "modules",
    "jsSrcsDir": "src"
  }
}
